msg_t11r8f1:
	dw	msg1$


msg1$:
	db	CALL_MSG

	ld	a,(ev_t11_8 + 0)
	bit	0,a
	jr	nz,yet$

	ld	hl,msg1_0$
	call	put_win_msg

	ld	bc,229 * 256 + 1		; item no = 229, lot = 1
	call	take_item
	jr	nc,full$

	ld	hl,msg1_1$
	call	put_win_msg

	ld	hl,ev_t11_8 + 0
	set	0,(hl)

	jr	rts$


full$:
	ld	hl,msg1_3$
	call	put_win_msg

	jr	rts$


yet$:
	ld	hl,msg1_2$
	call	put_win_msg

rts$:
	jp	msg_return


