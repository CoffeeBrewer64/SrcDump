MINKA_TYPE	equ	8
EXIT		=	0ffh


t11_room8:
ysiz	=	4
xsiz	=	4
	db	MINKA_TYPE		; map type
	db	ysiz,xsiz		; yx size
	dw	minka_a			; map data adrs
	dw	msg_t11r8f1		; message tbl adrs
	dw	ev_t11r8f1		; event routine adrs
	db	0			; map link flg
	dw	sxy_t11r8f1


ev_t11r8f1:
