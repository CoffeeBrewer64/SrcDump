;*******************
fighter:
	ld	a,(event_fight_no)
	and	a
	jr	z,fighter1

fighter0:
	ld	a,(event_fight_no)
	ld	(sel_item_no),a
	ld	(enemy_no),a			; Get Monster Number
	jr	fighter2

fighter1:
	ld	a,(game_mode)
	bit	1,a
	jr	z,normal_mode$

	ld	a,(joy_status)
	bit	1,a
	ret	nz				; debug mode and push B

normal_mode$:
	ld	a,(walking)
	and	a
	ret	nz				; fight no ato 3po ha
						; encount sinai
;	call	encount_check
	ld	hl,encount_check
	ld	b,04h
	call	bank_push_call
	ret	nz

fighter2:
	ld	a,(base_color)
	push	af
	ld	hl,msg_speed
	ld	a,(hl)
	push	af
	res	1,(hl)

	ld	hl,fighter2_sub			; init
	ld	b,014h
	call	bank_push_call

	ld	a,(enemy_no)
	sub	200
	jp	c,wild				; if Carry Up Then Wild Monster

;****************************************************************
;* case of crossing the dealer of capsule monster 		*
;* INPUT		A regs	number of the wild monster	*
;****************************************************************
dealer:
	ld	(dealer_no),a			;
	call	get_dealer_data			; Get Dealer Name & Data

	ld	hl,set_dealer_mons
	ld	b,0eh
	call	bank_push_call

	call	oam_dvram_clr
	call	set_img_ram			; print dealer chara

	xor	a
	ld	(enemy_no),a
	ld	(dmy_box1),a
	dec	a
	ld	(ctrl_move_val + DEALER_ITEM_CNT),a
	S_POS	12,0
	ld	a,B_SET_MSD_READY
	call	bank2bank


	ld	a,0ffh
	ld	(enemy_data + 14),a		; select monster pos
	ld	a,2				; case of monster's owner
	ld	(fighting_flg),a

	jp	wild2

;****************************************************************
; case of crossing the wild monster 				*
; INPUT		A regs		number of the wild monster	*
;****************************************************************
wild:
	ld	a,1
	ld	(fighting_flg),a		; case of wild monster

	call	get_enemy_data			; set the enemy monster data

	call	oam_dvram_clr
	
	ld	a,(event_fight_no)
	cp	145
	jr	z,pass1$			; garagara
	
	call	check_ghost_sub
	jr	nz,pass2$			; not ghost

pass1$:
	ld	hl,mons_data + 10
	ld	a,066h
	ld	(hli),a
	ld	bc,monschr184			; ghost chr
	ld	a,c
	ld	(hli),a
	ld	(hl),b

	ld	hl,enemy_data
  ifn	pm_jmsg
	ld	a,yu_
	ld	(hli),a
	ld	a,u_
	ld	(hli),a
	ld	a,re_
	ld	(hli),a
	ld	a,i_
	ld	(hli),a
	ld	(hl),EOM
  else
	ld	a,usf_g
	ld	(hli),a
	ld	a,usf_h
	ld	(hli),a
	ld	a,usf_o
	ld	(hli),a
	ld	a,usf_s
	ld	(hli),a
	ld	a,usf_t
	ld	(hli),a
	ld	(hl),EOM
  endif

	ld	a,(sel_item_no)
	push	af
	ld	a,184
	ld	(sel_item_no),a
	ld	de,CHAR_BG
	call	put_monschr			; image out ghost
	pop	af
	ld	(sel_item_no),a
	jr	pass3$
	
pass2$:
	ld	de,CHAR_BG
	call	put_monschr			; image out wild monster
	
pass3$:
	xor	a
	ld	(dealer_no),a			;
	ld	(dmy_box1),a			; first character value
	S_POS	12,0 
	ld	a,B_SET_MSD_READY
	call	bank2bank

wild2:
	ld	b,COL_FIGHT1
	call	color_set

	call	set_jiki_ram			; put character of own

	xor	a				; 9800 clear
	ld	(all_put_req),a

	ld	hl,no_msg
	call	put_win_msg

	call	push_vram
	call	dvram_cls
	ld	a,98h
	ld	(all_putadr_h),a
	ld	a,1
	ld	(all_put_req),a
	call	put_wait
	ld	a,9ch
	ld	(all_putadr_h),a
	call	pop_vram

	S_POS	9,7
	E_POS	10,5
	call	block_cls
	S_POS	1,0
	E_POS	10,4
	call	block_cls
	call	oam_clr

	ld	a,(fighting_flg)
	dec	a
	call	z,status_sub2		; enemy life gauge

	call	araware1			; main of fighting

	ld	hl,fightend1
	ld	b,04h
	call	bank_push_call

	pop	af
	ld	(msg_speed),a
	pop	af
	ld	(base_color),a

	ld	a,(data_wrt_flag)
	ld	(wave_flg),a

	scf					; experience fighting
	ret

