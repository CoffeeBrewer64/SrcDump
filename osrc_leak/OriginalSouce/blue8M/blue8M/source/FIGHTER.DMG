set_mons_dvram:
	ld	bc,7 * 100h + 7
	ld	de,20

	push	af

	ld	a,(reverse_fg)
	and	a
	jr	nz,rev1$

	pop	af

z14$:
	push	bc
	push	hl

z15$:
	ld	(hl),a
	add	hl,de
	inc	a
	dec	c
	jr	nz,z15$

	pop	hl
	inc	hl
	pop	bc
	dec	b
	jr	nz,z14$

	ret

rev1$:
	push	bc
	ld	b,0
	dec	c
	add	hl,bc
	pop	bc
	pop	af

rev14$:
	push	bc
	push	hl

rev15$:
	ld	(hl),a
	add	hl,de
	inc	a
	dec	c
	jr	nz,rev15$

	pop	hl
	dec	hl
	pop	bc
	dec	b
	jr	nz,rev14$

	ret


