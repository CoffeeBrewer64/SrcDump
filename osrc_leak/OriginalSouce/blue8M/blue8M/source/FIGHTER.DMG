zoomer:
	ld	de,16*8 - 5 + plane0_area
	ld	hl,plane2_area + 391
	call	zoomf1$

	call	zoom1$

	ld	de,16*8 - 5 + plane1_area
	ld	hl,plane0_area + 391
	call	zoomf1$

zoom1$:
	ld	b,3

zoom2$:
	ld	c,28

zoom3$:
	push	bc

	ld	a,(de)
	ld	bc,-55
	call	get_byt1$		; low 4 bit

	ld	a,(de)
	dec	de
	swap	a
	ld	bc,55
	call	get_byt1$		; high 4 bit

	pop	bc

	dec	c
	jr	nz,zoom3$

	dec	de
	dec	de
	dec	de
	dec	de

	ld	a,b
	ld	bc,-56
	add	hl,bc
	ld	b,a

	dec	b
	jr	nz,zoom2$

	ret


zoomf1$:
	ld	a,28
	ld	(work0),a
	ld	bc,-1

zoomf2$:
	ld	a,(de)
	dec	de
	swap	a
	call	get_byt1$

	ld	a,(work0)
	dec	a
	ld	(work0),a
	jr	nz,zoomf2$

	dec	de
	dec	de
	dec	de
	dec	de

	ret


get_byt1$:
	push	hl

	and	00fh
	ld	hl,zoomtbl1$
	add	a,l
	ld	l,a
	jr	nc,get_byt2$

	inc	h

get_byt2$:
	ld	a,(hl)

	pop	hl

	ld	(hld),a
	ld	(hl),a
	add	hl,bc

	ret


zoomtbl1$:
	db	000h,003h,00ch,00fh,030h,033h,03ch,03fh
	db	0c0h,0c3h,0cch,0cfh,0f0h,0f3h,0fch,0ffh


