	cp	c				; encounter code check
	ld	a,(gein_name)			; encounter rate value
	jr	z,rnd$

	ld	a,14h				; water character
	cp	c
	ld	a,(gein_cap_data)		; encounter rate value
	jr	z,rnd$

	ld	a,(mapno)
