;	call	z,special$
	ld	(sel_item_no),a
	ld	(enemy_no),a			; Get Monster Number

	ld	a,(musiyoke_flg)
	and	a
	jr	z,encount$

	ld	a,(my_cap_data + 33)		; sentou no monster no level
	ld	b,a
	ld	a,(mons_level)
	cp	b
	jr	c,not_encount$			; mymons level > enemy level

	jr	encount$

