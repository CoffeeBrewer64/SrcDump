seq_r20		equ	seq_ctrl_buf + 38h


road20_event:
	ld	hl,ev_r20 + 0
	bit	0,(hl)				; event clear switch
	res	0,(hl)
	call	nz,d16_clear

	call	init_for_talkmap

	ld	hl,dealer_talk
	ld	de,r20_tbl
	ld	a,(seq_r20)
	call	battle_sequence
	ld	(seq_r20),a

	ret


d16_clear:
	ld	a,(ev_d16 + 1)			; d16r0102
	and	00000011b
	cp	00000011b
	jr	z,next_clear

	ld	a,< R20R1F1msg1
	call	req_appear

	ld	a,< R20R1F1msg2
	call	req_appear

	ld	hl,clear_rock$

loop$:
	ld	a,(hli)
	cp	0ffh
	jr	z,next_clear

	push	hl

	call	req_vanish

	pop	hl

	jr	loop$


clear_rock$:
	db	D16R1F1msg1
	db	D16R1F1msg2
	db	D16R1F2msg1
	db	D16R1F2msg2
	db	D16R1F3msg5
	db	D16R1F3msg6
	db	0ffh


next_clear:
	ld	a,(ev_d16 + 2)			; d16r0103
	and	00000011b
	cp	00000011b
	ret	z

	ld	a,< D16R1F3msg2
	call	req_appear

	ld	a,< D16R1F3msg3
	call	req_appear

	ld	a,< D16R1F4msg1
	call	req_vanish

	ld	a,< D16R1F4msg2
	call	req_vanish

	ret


req_appear:
	ld	(obs_obj),a
	ld	a,B_REQ_OBJ_APPEAR
	jp	bank2bank


req_vanish:
	ld	(obs_obj),a
	ld	a,B_REQ_OBJ_VANISH
	jp	bank2bank



