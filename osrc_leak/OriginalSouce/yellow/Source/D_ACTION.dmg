dealer_action:
;	and	a				; NC
	ld	a,(fighting_flg)
	dec	a
	jr	z,not_use_ret$			; case of wild monster 

	ld	a,(tuushin_flg)
	cp	4
	jr	z,not_use_ret$			; case of term fight 

;------------------------------- debug 98/5/18 -----------------------
	ld	a,(enemy_cond3)
	and	013h				; gaman abareru tame
	jr	nz,not_use_ret$
;------------------------------- debug 98/5/18 -----------------------
;------------------------------- debug 98/5/24 -----------------------
	ld	a,(enemy_cond4)
	and	040h				; ikari
	jr	nz,not_use_ret$
;------------------------------- debug 98/5/24 -----------------------

	ld	a,(dealer_no)
	dec	a
	ld	c,a
	ld	b,0
	ld	hl,d_action_tbl
	add	hl,bc
	add	hl,bc
	add	hl,bc

	ld	a,(ctrl_move_val + DEALER_ITEM_CNT)
	and	a
	jr	z,not_use_ret$

	inc	hl
	inc	a
	jr	nz,next$

	dec	hl
	ld	a,(hli)
	ld	(ctrl_move_val + DEALER_ITEM_CNT),a
next$:
	ld	a,(hli)
	ld	h,(hl)
	ld	l,a
	call	rnd
	jp	(hl)
	


not_use_ret$:
	and	a		; NC
	ret



