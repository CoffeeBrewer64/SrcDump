capsulechr_set:			;ＯＢＪで表示するカプセル”●●○○○○”のキャラクタをセット
	ld	de,cap_data
	ld	hl,8310h
	ld	bc,0eh * 100h + 4
	jp	chrmove


mycapcond_put:
	call	fightwaku1_put

	ld	hl,my_cap_data
	ld	de,my_cap_tbl
	call	condition_chk

	ld	a,60h
;	ld	(effect_x),a
;	ld	(effect_y),a
	ld	hl,effect_x
	ld	(hli),a
	ld	(hl),a
	ld	a,8
	ld	(usr_buf + 1),a
  ifn	pm_cgb & pm_cgb_obj_atr		;戦闘時のカプセル表示
	xor	a
	ld	(temp_attr),a
  endif
	ld	hl,oam_buf
	jp	capsule_set


geincapcond_put:
	call	fightwaku2_put

	ld	hl,gein_cap_data
	ld	de,gein_cap_tbl
	call	condition_chk

;	ld	a,48h
;	ld	(effect_x),a
;	ld	a,20h
;	ld	(effect_y),a

	ld	hl,effect_x
	ld	a,48h
	ld	(hli),a
	ld	(hl),20h

	ld	a,-8
	ld	(usr_buf + 1),a
  ifn	pm_cgb & pm_cgb_obj_atr		;戦闘時のカプセル表示
	ld	a,01h
	ld	(temp_attr),a
  endif
	ld	hl,6*4 + oam_buf
	jp	capsule_set


condition_chk:
	ld	a,(de)
	push	af
	ld	de,yes_no_map

	ld	c,6
	ld	a,3 + 31h
loop1$:
	ld	(de),a
	inc	de
	dec	c
	jr	nz,loop1$

	pop	af
	ld	de,yes_no_map
loop3$:
	push	af
	call	cond_chk_sub
	inc	de
	pop	af
	dec	a
	jr	nz,loop3$
	ret


cond_chk_sub:
	inc	hl
	ld	a,(hli)
	and	a
	jr	nz,no_dead$
	ld	a,(hl)
	and	a
	ld	b,2 + 31h
	jr	z,dead$
no_dead$:
	inc	hl
	inc	hl
	ld	a,(hl)
	and	a
	ld	b,1 + 31h
	jr	nz,set$

;	ld	b,0 + 31h
	dec	b
	jr	set$
dead$:
	inc	hl
	inc	hl
set$:
	ld	a,b
	ld	(de),a
	ld	bc,CAPDATA_LEN - 4
	add	hl,bc
	ret


capsule_set:				; ＯＢＪでカプセル”●●○○○○”を表示
	ld	de,yes_no_map
	ld	c,6
loop3$:
	ld	a,(effect_y)
	ld	(hli),a
	ld	a,(effect_x)
	ld	(hli),a
	ld	a,(de)
	ld	(hli),a
  ifn	pm_cgb & pm_cgb_obj_atr		;戦闘時のカプセル表示
	ld	a,(temp_attr)
  else
	xor	a
  endif
	ld	(hli),a
	
	ld	a,(effect_x)
	ld	b,a
	ld	a,(usr_buf + 1)
	add	a,b
	ld	(effect_x),a
	inc	de
	dec	c
	jr	nz,loop3$
	ret
	

