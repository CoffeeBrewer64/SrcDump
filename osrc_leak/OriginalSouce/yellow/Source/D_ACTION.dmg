;      :  yes_no_map + 0 , + 1  = maxHP			; 
;      :  yes_no_map + 2 , + 3  = startHP		; 
;      :  yes_no_map + 4 , + 5  = endHP			; 
d_kaifuku:
	call	cond_clear_main
	ld	a,16
	ld	(yes_no_map + 28),a

	ld	de,yes_no_map + 2
	ld	hl,enemy_data + 13		; nowHP (low)
	ld	a,(hld)
	ld	(de),a
	inc	de
	ld	a,(hl)
	ld	(de),a
	inc	de

	ld	hl,enemy_data + 27		; maxHP (low)
	ld	a,(hld)
	ld	(de),a
	inc	de
	ld	(yes_no_map),a
	ld	(enemy_data + 13),a
	ld	a,(hl)				; maxHP (high)
	ld	(de),a
	ld	(yes_no_map + 1),a
	ld	(enemy_data + 12),a
	
	jr	kizu_main

d_kizu:
	ld	a,20
	ld	b,KIZU
	jr	kizu_p

d_iikizu:
	ld	a,19
	ld	b,IIKIZU
	jr	kizu_p

d_sugoikizu:
	ld	a,18
	ld	b,SUGOIKIZU

kizu_p:
	ld	(yes_no_map + 28),a

	ld	hl,enemy_data + 13		; nowHP (low)
	ld	a,(hl)
	ld	(yes_no_map + 2),a
	add	a,b
	ld	(hld),a
	ld	(yes_no_map + 4),a

	ld	a,(hl)				; nowHP (high)
	ld	(yes_no_map + 3),a
	ld	(yes_no_map + 5),a

	jr	nc,kizu_1$

	inc	a
	ld	(hl),a
	ld	(yes_no_map + 5),a

kizu_1$:
	inc	hl
	ld	a,(hld)				; nowHP (low)
	ld	b,a
;	ld	a,(enemy_data + 27)		; maxHP (low)
	ld	de,enemy_data + 27		; maxHP (low)
	ld	a,(de)
	dec	de
	ld	(yes_no_map),a
	sub	b
	ld	a,(hli)				; nowHP (high)
	ld	b,a
;	ld	a,(enemy_data + 26)		; maxHP (high)
	ld	a,(de)
	ld	(yes_no_map + 1),a
	sbc	a,b

	jr	nc,kizu_main

;	ld	a,(enemy_data + 27)		; maxHP (low)
	inc	de
	ld	a,(de)
	dec	de
	ld	(hld),a
	ld	(yes_no_map + 4),a
;	ld	a,(enemy_data + 26)		; maxHP (high)
	ld	a,(de)
	ld	(hl),a
	ld	(yes_no_map + 5),a
	
kizu_main:
	call	itemuse_msg

	S_POS	2,2
	xor	a				; 0 = enemy graph
	ld	(mons_or_item),a		; 

	ld	a,B_HP_GRAPH_INCDEC
	call	bank2bank

	jp	itemuse_end
	

d_torikae:
	ld	a,(gein_cap_tbl)
	ld	c,a

	ld	hl,gein_cap_data + 1
	ld	d,0

torikae1$:
	ld	a,(hli)				; nowHP (high)
	ld	b,a
	ld	a,(hld)				; nowHP (low)
	or	b
	jr	z,torikae2$
	
	inc	d
torikae2$:
	push	bc
	ld	bc,CAPDATA_LEN
	add	hl,bc
	pop	bc

	dec	c
	jr	nz,torikae1$

	ld	a,d
	cp	2
	jp	nc,d_torikae3
	
	and	a
	ret

d_torikae3:
	ld	a,(enemy_data + 14)		; select monster pos
	ld	hl,gein_cap_data + 1
	ld	bc,CAPDATA_LEN
	call	mul_any

	ld	d,h
	ld	e,l
	ld	hl,enemy_data + 12
	ld	bc,4
	call	block_move			; hikkomeru monster no
						; nowHP to condition wo save
	ld	hl,torikae_msg$
	call	put_win_msg

	ld	a,1
	ld	(fightbegin_flg),a

	ld	hl,kuridashi_sub1
	ld	b,0fh
	call	bank_push_call

	xor	a
	ld	(fightbegin_flg),a

	ld	a,(tuushin_flg)
	cp	4
	ret	z

;	jp	itemuse_end
	scf	
	ret

torikae_msg$:
	extern	torikae_msg_0_D_ACTION
	db I_MSG2	; mvmsg追加
	dw torikae_msg_0_D_ACTION	; mvmsg追加
	db 027h	; mvmsg追加
	db EOM	; put_msg_s終了コード mvmsg追加


condition_clear:
	call	itemuse_se

	call	cond_clear_main

	ld	a,52
	jp	itemuse


cond_clear_main:
	ld	a,(enemy_data + 14)
	ld	hl,gein_cap_data + 4
	ld	bc,CAPDATA_LEN
	call	mul_any

	xor	a
	ld	(hl),a
	ld	(enemy_data + 15),a

	ld	hl,enemy_cond5
	res	0,(hl)
	ret


yokuataaru:
	call	itemuse_se
	ld	hl,enemy_cond4
	set	0,(hl)
	ld	a,46
	jp	itemuse


effect_g:
	call	itemuse_se
	ld	hl,enemy_cond4
	set	1,(hl)
	ld	a,55
	jp	itemuse


c_cutter:
	call	itemuse_se
	ld	hl,enemy_cond4
	set	2,(hl)
	ld	a,58
	jp	itemuse


hp_check:
	ld	(calc_work4),a
	ld	hl,enemy_data + 26
	ld	a,(hli)				; maxHP (high)
	ld	(calc_work0),a
	ld	a,(hl)				; maxHP (low)
	ld	(calc_work1),a
	ld	b,2
	call	div_direct
	
	ld	a,(calc_work3)
	ld	c,a
	ld	a,(calc_work2)
	ld	b,a

	ld	hl,enemy_data + 13
	ld	a,(hld)				; nowHP (low)
	ld	e,a
	ld	a,(hl)				; nowHP (high)
	ld	d,a

	ld	a,d
	sub	b
	ret	nz
	
	ld	a,e
	sub	c
	ret
	

d_powerup:
	ld	b,10
	ld	a,65
	jr	condcall

d_deffender:
	ld	b,11
	ld	a,66
	jr	condcall

d_speeder:
	ld	b,12
	ld	a,67
	jr	condcall

d_specialup:
	ld	b,13
	ld	a,68

condcall:
	ld	(yes_no_map + 28),a
	push	bc
	call	itemuse_msg
	pop	bc

	ld	hl,e_kougeki + 1
	ld	a,(hld)
	push	af
	ld	a,(hl)
	push	af
	push	hl

;	ld	a,b
;	ld	(e_kougeki + 1),a
;	ld	a,175
;	ld	(e_kougeki),a
	ld	a,175
	ld	(hli),a
	ld	(hl),b

	ld	hl,sp_cond_up
	ld	b,0fh
	call	bank_push_call

	pop	hl
	pop	af
;	ld	hl,e_kougeki
	ld	(hli),a
	pop	af
	ld	(hl),a

	jp	itemuse_end


itemuse:
	ld	(yes_no_map + 28),a
	call	itemuse_msg
	jp	itemuse_end


itemuse_msg:
	ld	a,(yes_no_map + 28)
	ld	(in_dat),a
	call	get_item_name

	ld	hl,msg$
	jp	put_win_msg


msg$:
	extern	msg_1_D_ACTION
	db I_MSG2	; mvmsg追加
	dw msg_1_D_ACTION	; mvmsg追加
	db 027h	; mvmsg追加
	db EOM	; put_msg_s終了コード mvmsg追加


