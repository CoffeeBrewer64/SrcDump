	call	condition_chk

;	ld	a,50h
;	ld	(effect_x),a
;	ld	a,60h
;	ld	(effect_y),a

	ld	hl,effect_x
	ld	a,50h
	ld	(hli),a
 ifn	ASSEMBLE__ENGLISH
	ld	(hl),68h		; (effect_y)= $68	OBJ Ypos	S_POS(9,11)
 else
	ld	(hl),60h		; (effect_y)= $60	OBJ Ypos	S_POS(9,10)
