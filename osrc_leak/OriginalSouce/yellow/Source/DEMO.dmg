EXIT_POINT	equ	7
CONFIG_MAX	equ	5

UpDownKey:
	ld	hl,usr_buf+0

	ld	a,(joy_repeat)
;	bit	7,a
;	jr	nz,down$
	cp	80h
	jr	z,down$
;	bit	6,a
;	jr	nz,up$
	cp	40h
	jr	z,up$
	and	a
	ret
down$:
	ld	a,(hl)
	cp	EXIT_POINT
	jr	nz,d_check$
	ld	(hl),00h
	scf
	ret
d_check$:
	cp	CONFIG_MAX-1
	jr	c,d_set$
	ld	(hl),EXIT_POINT-1
d_set$:
	inc	(hl)
	scf
	ret
up$:
	ld	a,(hl)
	cp	EXIT_POINT
	jr	nz,u_check$
	ld	(hl),CONFIG_MAX-1
	scf
	ret
u_check$:
	and	a
	jr	nz,u_set$
	ld	(hl),EXIT_POINT+1
u_set$:
	dec	(hl)
	scf
	ret

