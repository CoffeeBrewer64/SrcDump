	ld	a,(my_lvl)
	push	af
	and	00110000b
	ld	(my_lvl),a
	ld	a,(headery)
	push	af
	ld	a,(headerx)
	push	af
	xor	a
	ld	(headery),a
	ld	(headerx),a

	push	de
