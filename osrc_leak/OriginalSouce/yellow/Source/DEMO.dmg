	push	de

	ld	hl,koukan_table
	add	a,a
	ld	c,a
	ld	b,0
	add	hl,bc
	ld	a,(hli)
	ld	h,(hl)
	ld	l,a

	ld	de,main_loop$
	push	de
	jp	(hl)
exit$:
	pop	af
	ld	(headerx),a
	pop	af
	ld	(headery),a
	pop	af
	ld	(my_lvl),a
	ret

